{% extends 'base.html.twig' %}

{% block title %}Lustres List{% endblock %}

{% block body %}
<div class="options">
    <a href="{{ path('app_admin_new_lustre') }}">Add a lustre</a>
</div>

<h1>Lustres List</h1>

<div class="list-main">
    <aside class="aside-wrapper">
        {% include "_partials/_admin_nav.html.twig"%}
    </aside>
    <div class="list-wrapper">
        <table>
            <thead>
              <tr>
                <th>Lustre Type</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
                {% for lustre in lustres %}
              <tr>
                <td><a href="{{path('show_lustre', {'slug': lustre.slug})}}">{{lustre.type}}</a></td>
                <td>
                    <a class="edit-btn" href="{{ path('app_admin_edit_lustre', {'slug': lustre.slug}) }}" aria-label="Edit">Edit</a>
                    <a class="delete-btn" href="{{ path('app_admin_delete_lustre', {'slug': lustre.slug}) }}" aria-label="Delete">Delete</a>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>   
        <nav>
            {{knp_pagination_render(lustres)}}
        </nav> 
    </div>
</div>



{% endblock %}