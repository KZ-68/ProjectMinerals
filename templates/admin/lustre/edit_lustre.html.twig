{% extends 'base.html.twig' %} 

{% block title %}Edit this lustre{% endblock %}

{% block body %}

<div id="edit-lustre-wrapper">
    <aside class="aside-wrapper">
        {% include "_partials/_admin_nav.html.twig"%}
    </aside>

    <div aria-labelledby="edit-lustre-heading" id="edit-lustre-right">

        <h1 id="edit-lustre-heading">Edit this lustre</h1>
        <hr>

        <div class="formulaire-wrapper">
            {{ form_start(form) }}
            <div class="formulaire">
                {{ form_row(form.type) }}
                {{ form_row(form.minerals)}}
                {{ form_row(form.submit)}}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}