{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}

<h1>Users List</h1>

<div class="list-main">
    <aside class="aside-wrapper">
        {% include "_partials/_admin_nav.html.twig"%}
    </aside>
    
    <div class="list-wrapper">
        <table>
            <thead>
              <tr>
                <th>Username</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
                {% for user in users %}
              <tr>
                <td><a href="">{{user.username}}</a></td>
                <td>
                    <a href="{{path('app_admin_anonymize_user', {'id': user.id})}}">Anonymize</a>
                    <a href="{{path('app_admin_delete_user', {'id': user.id})}}">Delete</a>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>   
    </div>
    <nav>
        {{knp_pagination_render(users)}}
    </nav> 
</div>

{% endblock %}