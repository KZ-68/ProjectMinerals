{% extends 'base.html.twig' %} 

{% block title %}Edit this color{% endblock %}

{% block body %}

<div id="edit-color-wrapper">
    <aside class="aside-wrapper">
        {% include "_partials/_admin_nav.html.twig"%}
    </aside>

    <div aria-labelledby="edit-color-heading" id="edit-color-right">
        <h1 id="edit-color-heading">Edit this color</h1>
