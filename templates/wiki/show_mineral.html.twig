{% extends 'base.html.twig' %}

{% block title %}Mineral Details{% endblock %}

{% block body %}

<div class="mineral-options">
        <a href="{{path('delete_mineral', {'id': mineral.id})}}">Remove this Page</a>
        <a href="{{path('edit_mineral', {'id': mineral.id})}}">Edit this Page</a>
        <a href="#">Discussions</a>
</div>

<h1>
    {{mineral.name}}
    {{mineral.category.name}}
</h1>

<figure id="mineral-figure">
    {% for image in image %}
    <img class="mineral-image" src="{{asset('uploads/images/' ~ image.filename) }}">
    {% endfor %}
</figure>

<section class="section-wiki">
    <h2>Table of Content</h2>

    <div>
        <div>
            <ul>
                <li class="table-list"><a>Varieties of {{mineral.name}}</a></li>
                <li class="table-list"><a>Gallery of {{mineral.name}}</a></li>
                <li class="table-list"></li>
                <li class="table-list"></li>
            </ul>
        </div>
    </div>
    
</section>

<section class="section-wiki">

    <h2>Detailled Caracteristics for {{mineral.name}}</h2>

    <div>
        <p>Formula :{{mineral.formula}}</p>
        <p>Crystal System : {{mineral.crystalSystem}}</p>
        <p>Density : {{mineral.density}}</p>
        <p>Hardness : {{mineral.hardness}}</p>
        <p>Fracture : {{mineral.fracture}}</p>
        <p>Streak : {{mineral.streak}}</p>
    </div>
</section>

<section class="section-wiki">
    <hgroup id="variety-title">
        <h2>Varieties of {{mineral.name}}</h2>
        <a id="add-variety" href="{{ path('new_variety', {'id': mineral.id}) }}">Add a variety</a>
    </hgroup>
    

    <div id="varieties-images">
    {% for image in images %}
        <figure class="figure-varieties">
            <img class="mineral-image" src="{{asset('uploads/images/' ~ image.filename) }}">
            <figcaption>{{image.variety.name}}</figcaption>
        </figure>
        
    {% endfor %}
    </div>
</section>

<section class="section-wiki">
    <h2>Images Gallery of {{mineral.name}}</h2>

        <div id="cCarousel">
          <div class="arrow" id="prev"><span class="arrow-symbols">&#8249;</span></div>
          <div class="arrow" id="next"><span class="arrow-symbols">&#8250;</span></div>
        

            <div id="carousel-vp">
                <div id="cCarousel-inner">
        
                {% for image in mineral.images  %}
                    <article class="cCarousel-item">
                        <img class="mineral-image" src="{{asset('uploads/images/' ~ image.filename) }}" alt="Minerals">
                    </article>
                {% endfor %}
                </div>
            </div>
        </div>
</section>

{% endblock %}