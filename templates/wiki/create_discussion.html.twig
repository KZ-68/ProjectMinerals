{% extends 'base.html.twig' %} 

{% block title %}Create a new Discussion{% endblock %}

{% block body %}

<h1>Create a new Discussion</h1>

<div class="formulaire-wrapper">
    {{ form_start(form) }}
    <div class="formulaire">
        {{ form_row(form.subject) }}
        {{ form_row(form.content) }}
        {{ form_row(form.send) }}
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}