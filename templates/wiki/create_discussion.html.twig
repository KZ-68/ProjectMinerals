{% extends 'base.html.twig' %} 

{% block title %}Create a new Discussion{% endblock %}

{% block body %}

<div id="create-discussion-wrapper">
    <div aria-labelledby="create-discussion-heading" id="create-discussion-header">
        <h1 id="create-discussion-heading">Create a new Discussion</h1>
    </div>
    {{ form_start(form) }}
    <div class="formulaire">
        {{ form_row(form.subject) }}
        {{ form_row(form.content) }}
        {{ form_row(form.send) }}
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}