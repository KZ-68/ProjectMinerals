{% extends 'base.html.twig' %}

{% block title %}Images List{% endblock %}

{% block body %}

<h1>Images List</h1>

<div class="images-list-wrapper">
    <div>
        <ul>
            {% for image in images %}
                <li>
                    <figure>
                        <img class="mineral-image" src="{{asset('uploads/images/' ~ image.filename) }}">
                    </figure>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

<nav>
    {{knp_pagination_render(images)}}
 </nav>

{% endblock %}