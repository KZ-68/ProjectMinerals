{% extends 'base.html.twig' %}

{% block title %}Modifications History{% endblock %}

{% block body %}
    <h1>Modifications History</h1>
    <table>
        <thead>
            <tr>
                <th>Mineral</th>
                <th>User</th>
                <th>Modification Date</th>
                <th>Old Values</th>
                <th>New Values</th>
            </tr>
        </thead>
        <tbody>
            {% for entry in history %}
                <tr>
                    <td>{{ entry.mineral.name }}</td>
                    <td>{{ entry.user.username }}</td>
                    <td>{{ entry.createdAt|date('Y-m-d H:i:s') }}</td>
                    <td>
                        {% for change in entry.changes %}
                            {{ change.0 | json_encode(constant('JSON_PRETTY_PRINT')) }}<br>
                        {% endfor %}
                    </td>
                    <td>
                        {% for change in entry.changes %}
                            {{ change.1 | json_encode(constant('JSON_PRETTY_PRINT')) }}<br>
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}