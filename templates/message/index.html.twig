{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<div class="message-box-wrapper">
    <div class="message-menu-wrapper">
        {% include "_partials/_message_menu.html.twig"%}
    </div>

    <section class="container">
        <div class="row">
            <div class="message-resume">
                <div id="message-resume-header">
                    <h1 id="message-resume-heading">Message Box</h1>
                    <hr>
                </div>
                <div id="message-resume-body">
                    <p>Received : {{ app.user.received|length}}</p>
                    <p>Sent : {{app.user.sent|length}} </p>
                </div>
                <div id="message-resume-footer">
                    <a href="{{ path('app_message_send', {'id': app.user.id})}}" class="btn btn-primary" role="button" aria-controls="offcanvasExample">
                        Sending a message
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
