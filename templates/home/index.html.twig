    <h1 id="fig-logo">KZ Minerals</h1>
</figure>
<div id="carousel1">
    <figure id="diaporama">
        <img src="{{ asset('uploads/images/sainte-marie-aux-mines-photo.jpg') }}">
    </figure>
    <figure id="diaporama">
        <img src="{{ asset('uploads/images/entre-les-tentes-de-la-rue-osmont-photo-dna-anne-muller-1656531412.jpg') }}">
    </figure>
