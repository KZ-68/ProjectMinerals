<div class="notification-modal">
    <div id="notification-header">
        <hgroup>
            <h1>Notifications Center</h1>
            <hr>
        </hgroup>
        <button id="btn-quit">x</button>
    </div>
    <div id="notification-body">
        {% for notification in notifications %}
                <button role="listitem" id="notification-layout">
                    {% if notification.comment.user is null %}
                        <div>User Deleted</div>
                    {% else %}
                        <div>{{notification.comment.user.username}}</div>    
                    {% endif %}
                    <div>{{notification.comment.content | sanitize_html}}</div>
                    <time datetime="notification.comment.getDateTime">{{notification.comment.getDateTime}}</time> 
                </button>
                
        {% endfor %}
    </div>
    <div id="notification-footer">
        <a></a>
    </div>

    
</div>